{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "lib",
    "moduleResolution": "Node",
    "declaration": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}